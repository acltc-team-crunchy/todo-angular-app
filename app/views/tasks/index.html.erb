<div ng-app="app">
  <div ng-controller="todoCtrl">
    <div ng-repeat="task in tasks track by $index" ng-click="deleteTask($index)" ng-if="isPositive(task)">
      {{ task }}
    </div>
    <div>
      <input ng-model="newTask">
      <button ng-click="addTask(newTask)">Add Task</button>
    </div>
  </div>
</div>